<h2><%= @task.title%></h2>
<ul>
  <li><%=@task.details %></li>
  <li><%=@task.completed ? "Done!" : "To do"%></li>
</ul>
<button type="button" class="btn btn-primary"><%= link_to 'Edit', edit_task_path(@task), :class => "button" %></button>
<button type="button" class="btn btn-danger"><%= link_to 'Delete', task_path(@task), method: :delete, data: {confirm: "Are you sure?"}, :class => "button" %></button>
<button type="button" class="btn btn-success"><%= link_to 'Done', done_task_path(@task), :class => "button" %></button>
<br>
<%=  link_to "Back to list", tasks_path %>
